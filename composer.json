{
    "name": "ixocreate/application",
    "description": "IXOCREATE Application",
    "license": "MIT",
    "type": "library",
    "authors": [
         {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ixocreate/servicemanager": "^0.1",
        "filp/whoops": "^2.1",
        "symfony/console": "^4.0",
        "zendframework/zend-expressive": "^3.0",
        "zendframework/zend-expressive-fastroute": "^3.0",
        "zendframework/zend-expressive-helpers": "^5.0",
        "zendframework/zend-diactoros": "^1.7"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "mikey179/vfsstream": "^1.6",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Application\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Application\\": "tests/misc/",
            "Ixocreate\\Test\\Application\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}

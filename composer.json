{
    "name": "ixocreate/application",
    "description": "IXOCREATE Application",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2 || ^8.0",
        "ixocreate/servicemanager": "dev-develop",
        "laminas/laminas-diactoros": "^2.3",
        "mezzio/mezzio": "^3.0",
        "mezzio/mezzio-fastroute": "^3.0",
        "mezzio/mezzio-helpers": "^5.0",
        "roave/better-reflection": "^4.2",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "0.1.1",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.3",
        "vimeo/psalm": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Application\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Application\\": "tests/misc/",
            "Ixocreate\\Test\\Application\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
